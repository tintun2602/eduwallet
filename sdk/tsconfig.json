{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2020",
    "lib": [
      "ES2020"
    ],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "rootDirs": [
      "src",
      "../typechain-types"
    ],
    "paths": {
      "@typechain/*": [
        "../typechain-types/*"
      ]
    },
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*",
    "../typechain-types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts"
  ]
}