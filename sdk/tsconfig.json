{
  "compilerOptions": {
    "outDir": "dist",               
    "declaration": true,            
    "declarationMap": true,         
    "sourceMap": true,              
    "module": "ESNext",             
    "moduleResolution": "Node",     
    "target": "ES2020",             
    "lib": ["ES2020"],              
    "strict": true,                 
    "esModuleInterop": true,        
    "skipLibCheck": true,           
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",                // Add base URL for path resolution
    "rootDirs": [                  // Multiple root directories
      "src",
      "../typechain-types"
    ],
    "paths": {                     // Path aliases for cleaner imports
      "@typechain/*": ["../typechain-types/*"]
    },
    "resolveJsonModule": true
  },
  "include": [                     // Include both src and typechain-types
    "src/**/*",
    "../typechain-types/**/*"
  ],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}